{
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": true,
  "overrides": [
    {
      "files": ["*.astro", "*.json", "*.md", "*.yml", "*.yaml"],
      "options": {
        "useTabs": false
      }
    }
  ],
  "endOfLine": "lf",
  "bracketSpacing": true,
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "css",
  "jsxBracketSameLine": false
}
